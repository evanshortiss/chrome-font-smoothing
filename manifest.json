{
  "manifest_version": 2,

  "name": "Font Smoothing",
  "description": "Adds configurable font anti-aliasing to all webpages you visit.",
  "version": "0.1.0",

  "browser_action": {
    "default_icon": "icon@16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon@16.png",
    "48": "icon@48.png",
    "128": "icon@128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["apply-smoothing.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}
